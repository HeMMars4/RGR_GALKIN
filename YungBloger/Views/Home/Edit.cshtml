@model ClassLibrary.Data.Article.Articls
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Heading" class="control-label">Имя</label>
        <input type="text" asp-for="Heading" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Возраст</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>